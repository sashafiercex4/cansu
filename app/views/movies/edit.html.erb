<% if @movie.errors.any? %>
  Hata: <%= @movie.errors.full_messages.to_sentence %>
  <br><br>
<% end %>


<%= form_for @movie, url: {action: 'update' } do |f| %>
Filmin Adı: <br> 
  <%= f.text_field :name %> <br>
Poster: <br>
  <%= f.file_field :avatar %> <br>
Açıklama: <br>
  <%= f.text_area :description %> <br>
  <%= f.submit 'Güncelleme' %>
<% end %>